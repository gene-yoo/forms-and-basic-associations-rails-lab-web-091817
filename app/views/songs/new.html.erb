<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name, value: "" %>
  </p>

  <p>
    <%= f.label :genre_id %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  </p>

  <div>
    <%= f.label :notes %>
    <p><%= f.text_field :notes, name:'song[note_contents][]', id:'song_notes_1', value: "" %></p>
    <p><%= f.text_field :notes, name:'song[note_contents][]', id:'song_notes_2', value: "" %></p>
    <p><%= f.text_field :notes, name:'song[note_contents][]', id:'song_notes_3', value: "" %></p>
  </div>


  <%= f.submit %>
<% end %>
